# speaker-test -D surround20 -l1 -c2 -twav
pcm.!surround20 {
  type plug
  slave.pcm "softvol"
}

pcm.!surround50 {
  type plug
  slave.pcm "plug:ch51dup"
}

pcm.!surround51 {
  type plug
  slave.pcm "plug:ch51dup"
}

pcm.!surround71 {
  type plug
  slave.pcm "plug:ch71dup"
}

# https://github.com/opensrc/alsa/blob/master/lib/md/Dmix.md
pcm.dsp {
  type plug
  slave.pcm "dmixer"
}
