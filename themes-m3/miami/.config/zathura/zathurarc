set index-fg         "#F7DDDB"       # Foreground
set index-active-bg  "#D23E43"   # Current Line
set index-active-fg  "#FFFFFF" # Foreground

set statusbar-fg "#F7DDDB"
set statusbar-bg "#1D100F"
set inputbar-fg "#F7DDDB"
set inputbar-bg "#1D100F"

set notification-error-bg "#FFB86D"
set notification-error-fg "#492900"
