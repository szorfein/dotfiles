set -g status-left "#[fg=black,bg=blue,bold] #S #[fg=blue,bg=black,nobold]  "
# Window Status
setw -g window-status-format '#[fg=brightcyan,bg=black]#[fg=black,bold,bg=brightcyan] #I #[fg=brightcyan,bg=brightblack]#[fg=white,bg=brightblack,nobold] #W '
setw -g window-status-current-format '#[fg=cyan,bg=black]#[fg=black,bold,bg=cyan] #I #[fg=cyan,bg=brightblack,nobold]#[fg=white,bg=brightblack] #W '
