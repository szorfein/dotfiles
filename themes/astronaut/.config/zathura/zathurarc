set font                        "Iosevka Medium 11"

set default-fg                  "#D8E2FF" # grey_fg
set default-bg                  "#10161E" # grey

set statusbar-fg                "#D8E2FF" # grey_fg
set statusbar-bg                "#10161E" # grey_dark

set inputbar-fg                 "#D8E2FF" # primary_fg
set inputbar-bg                 "#ADC6FF" # primary

set notification-error-fg       "#FFB4AB" # error_fg
set notification-error-bg       "#10161E" # error

set notification-warning-fg     "#690005" # error_fg
set notification-warning-bg     "#FFB4AB" # error_light

set highlight-color             "#E5B8E8" #0A
set highlight-active-color      "#44244A" #0D

set completion-highlight-fg     "#44244A" #02
set completion-highlight-bg     "#E5B8E8" #0C

set completion-fg               "#1f1b3f" #0C
set completion-bg               "#e0eaf9" #02

set notification-fg             "#D8E2FF" # error_fg
set notification-bg             "#3B475F" # error_dark

set recolor-lightcolor          "#10161E" # grey
set recolor-darkcolor           "#D8E2FF" # grey_fg
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, itll just be black and white
set recolor-keephue             "false"
