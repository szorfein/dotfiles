; https://m3.material.io/components/button-groups/specs
(defwidget button-groups-icon [icon onclick ?class]
    (box :class "button-groups-icon"
     :height "${56 * round(get_env("EWW_SCALE"), 0)}"
     :width "${56 * round(get_env("EWW_SCALE"), 0)}"
        (button :onclick "${onclick}" :class "${class}" icon)
    )
)

