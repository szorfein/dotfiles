(defwidget button-groups-icon-text [icon text onclick ?class]
    (box :class "button-groups-icon-text"
         :height "${56 * round(get_env("EWW_SCALE"), 0)}"
         :width "${82 * round(get_env("EWW_SCALE"), 0)}"
         :hexpand false
        (button :onclick "${onclick}" :class "${class}"
            (box :space-evenly false
                 :halign "center"
                 :spacing "${6 * round(get_env("EWW_SCALE"), 0)}"
                (box :class "icon" icon)
                (box :class "label-large" text)
            )
        )
    )
)

