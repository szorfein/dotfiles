    (box :class "button-groups-icon-secondary"
     :height "${56 * round(get_env("EWW_SCALE"), 0)}"
     :width "${56 * round(get_env("EWW_SCALE"), 0)}"
        (button :onclick "${onclick}" :class "${class}" icon)
